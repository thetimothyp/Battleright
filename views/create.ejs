<!doctype html>
<html>
<head>
    <title>Battleright</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/edit.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Edit Guide</h1>
        <a href="/profile" class="btn btn-default btn-sm">Profile</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6 col-sm-offset-3">
                
            <button type="submit" form="guide" class="btn btn-primary btn-lg">Submit</button>

            <hr>
            <div id="chapters">
                <form action="/guides" method="post" id="guide">
                    Guide Title: <input type="text" name="title"><hr>
                    Champion: <input type="text" name="champion"><hr>
                    <div id="ch0">
                        Chapter Title: <input type="text" name="ch_title">
                        <br><br>
                        <textarea rows="10" cols="50" name="ch_body" style="width: 100%;"></textarea>
                    </div>
                </form>
            </div>
            <hr>
            <button class="btn btn-primary btn-lg add-more" style="float:right">Add Chapter</button>

        </div>

    </div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="/scripts/edit.js"></script>
</body>
</html>